<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Client.ViewModels"
             xmlns:components="using:Client.Views.Components"
             xmlns:converters="using:Client.Utils.Converters"
             xmlns:asyncImageLoader="using:AsyncImageLoader"
             mc:Ignorable="d" d:DesignWidth="1440" d:DesignHeight="900"
             x:Class="Client.Views.ProfileView"
             x:DataType="vm:ProfileViewModel"
             x:Name="Root">
    
    <UserControl.Resources>
        <converters:BoolToTabBackgroundConverter x:Key="TabBackgroundConverter" />
        <converters:BoolToTabForegroundConverter x:Key="TabForegroundConverter" />
        <converters:BoolToStringConverter x:Key="BoolToStringConverter" />
    </UserControl.Resources>
    
    <Design.DataContext>
        <vm:ProfileViewModel />
    </Design.DataContext>

    <Grid Background="#F8F9FA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <components:SidebarView Grid.Column="0" DataContext="{Binding Sidebar}" />

        <!-- Main Content Area -->
        <ScrollViewer Grid.Column="1"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,32,40,32" Spacing="24">
                
                <!-- Header: Page Title + Edit Actions -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Spacing="8">
                        <TextBlock Text="Profile"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="#1F2937" />
                        <TextBlock Text="Manage your personal information and documents"
                                   FontSize="16"
                                   Foreground="#6B7280" />
                    </StackPanel>
                    
                    <!-- Edit Actions (Aligned with Title) -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Top">
                        <Button Command="{Binding StartEditingCommand}"
                                IsVisible="{Binding !IsEditing}"
                                Background="#1F2937" Foreground="White"
                                CornerRadius="8" Padding="16,10"
                                Cursor="Hand">
                            <TextBlock Text="Edit Profile" />
                        </Button>
                        
                        <StackPanel Orientation="Horizontal" Spacing="12" IsVisible="{Binding IsEditing}">
                            <Button Command="{Binding CancelEditingCommand}"
                                    Background="White" Foreground="#374151"
                                    BorderBrush="#D1D5DB" BorderThickness="1"
                                    CornerRadius="8" Padding="16,10"
                                    Cursor="Hand">
                                <TextBlock Text="Cancel" />
                            </Button>
                            <Button Command="{Binding SaveChangesCommand}"
                                    Background="#1F2937" Foreground="White"
                                    CornerRadius="8" Padding="16,10"
                                    IsEnabled="{Binding !IsLoading}"
                                    Cursor="Hand">
                                <TextBlock Text="Save Changes" />
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- Status Messages -->
                <Border Background="#DEF7EC" BorderBrush="#84E1BC" BorderThickness="1" CornerRadius="6" Padding="12" IsVisible="{Binding SuccessMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <TextBlock Text="{Binding SuccessMessage}" Foreground="#03543F" />
                </Border>
                <Border Background="#FDE8E8" BorderBrush="#F8B4B4" BorderThickness="1" CornerRadius="6" Padding="12" IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="#9B1C1C" />
                </Border>

                <!-- Tab Buttons -->
                <Border Background="#F3F4F6" CornerRadius="8" Padding="4" HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal" Spacing="0">
                        <Button Command="{Binding SelectBasicInformationTabCommand}"
                                Padding="16,8" CornerRadius="6"
                                Background="{Binding IsBasicInformationTabSelected, Converter={StaticResource TabBackgroundConverter}}"
                                Foreground="{Binding IsBasicInformationTabSelected, Converter={StaticResource TabForegroundConverter}}"
                                Cursor="Hand">
                            <TextBlock Text="Basic Information" />
                        </Button>
                        <Button Command="{Binding SelectAttachmentsTabCommand}"
                                Padding="16,8" CornerRadius="6"
                                Background="{Binding IsAttachmentsTabSelected, Converter={StaticResource TabBackgroundConverter}}"
                                Foreground="{Binding IsAttachmentsTabSelected, Converter={StaticResource TabForegroundConverter}}"
                                Cursor="Hand">
                            <TextBlock Text="Attachments" />
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Basic Information Tab -->
                <Border Background="White" CornerRadius="12" Padding="32" BorderBrush="#E5E7EB" BorderThickness="1" IsVisible="{Binding IsBasicInformationTabSelected}">
                    <StackPanel Spacing="24">
                        <Grid ColumnDefinitions="*,32,*">
                            <StackPanel Grid.Column="0" Spacing="8">
                                <TextBlock Text="First Name" FontSize="14" FontWeight="Medium" Foreground="#1F2937" />
                                <Border Background="#F9FAFB" CornerRadius="8" Padding="16,12" IsVisible="{Binding !IsEditing}">
                                    <TextBlock Text="{Binding FirstName}" Foreground="#6B7280" />
                                </Border>
                                <TextBox Text="{Binding EditFirstName}" IsVisible="{Binding IsEditing}" />
                            </StackPanel>
                            <StackPanel Grid.Column="2" Spacing="8">
                                <TextBlock Text="Last Name" FontSize="14" FontWeight="Medium" Foreground="#1F2937" />
                                <Border Background="#F9FAFB" CornerRadius="8" Padding="16,12" IsVisible="{Binding !IsEditing}">
                                    <TextBlock Text="{Binding LastName}" Foreground="#6B7280" />
                                </Border>
                                <TextBox Text="{Binding EditLastName}" IsVisible="{Binding IsEditing}" />
                            </StackPanel>
                        </Grid>
                        
                        <Grid ColumnDefinitions="*,32,*">
                            <StackPanel Grid.Column="0" Spacing="8">
                                <TextBlock Text="Email" FontSize="14" FontWeight="Medium" Foreground="#1F2937" />
                                <Border Background="#F9FAFB" CornerRadius="8" Padding="16,12" IsVisible="{Binding !IsEditing}">
                                    <TextBlock Text="{Binding Email}" Foreground="#6B7280" />
                                </Border>
                                <TextBox Text="{Binding EditEmail}" IsVisible="{Binding IsEditing}" />
                            </StackPanel>
                            <StackPanel Grid.Column="2" Spacing="8">
                                <TextBlock Text="Phone Number" FontSize="14" FontWeight="Medium" Foreground="#1F2937" />
                                <Border Background="#F9FAFB" CornerRadius="8" Padding="16,12" IsVisible="{Binding !IsEditing}">
                                    <TextBlock Text="{Binding PhoneNumber}" Foreground="#6B7280" />
                                </Border>
                                <TextBox Text="{Binding EditPhoneNumber}" IsVisible="{Binding IsEditing}" />
                            </StackPanel>
                        </Grid>
                        
                        <Grid ColumnDefinitions="*,32,*">
                            <StackPanel Grid.Column="0" Spacing="8">
                                <TextBlock Text="Department" FontSize="14" FontWeight="Medium" Foreground="#1F2937" />
                                <!-- Display Mode -->
                                <Border Background="#F9FAFB" CornerRadius="8" Padding="16,12" IsVisible="{Binding !IsEditing}">
                                    <TextBlock Text="{Binding Department}" Foreground="#6B7280" />
                                </Border>
                                <!-- Edit Mode: Dropdown -->
                                <ComboBox ItemsSource="{Binding Departments}"
                                          SelectedItem="{Binding SelectedDepartment}"
                                          IsVisible="{Binding IsEditing}"
                                          HorizontalAlignment="Stretch"
                                          CornerRadius="8">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Spacing="8">
                                <TextBlock Text="Job Title" FontSize="14" FontWeight="Medium" Foreground="#1F2937" />
                                <Border Background="#F9FAFB" CornerRadius="8" Padding="16,12" IsVisible="{Binding !IsEditing}">
                                    <TextBlock Text="{Binding JobTitle}" Foreground="#6B7280" />
                                </Border>
                                <TextBox Text="{Binding EditJobTitle}" IsVisible="{Binding IsEditing}" />
                            </StackPanel>
                        </Grid>
                        
                        <Grid ColumnDefinitions="*,32,*">
                            <StackPanel Grid.Column="0" Spacing="8">
                                <TextBlock Text="Discord" FontSize="14" FontWeight="Medium" Foreground="#1F2937" />
                                <Border Background="#F9FAFB" CornerRadius="8" Padding="16,12" IsVisible="{Binding !IsEditing}">
                                    <TextBlock Text="{Binding DiscordUsername}" Foreground="#6B7280" />
                                </Border>
                                <TextBox Text="{Binding EditDiscordUsername}" IsVisible="{Binding IsEditing}" />
                            </StackPanel>
                            <StackPanel Grid.Column="2" Spacing="8">
                                <TextBlock Text="Projxon Email" FontSize="14" FontWeight="Medium" Foreground="#1F2937" />
                                <Border Background="#F9FAFB" CornerRadius="8" Padding="16,12" IsVisible="{Binding !IsEditing}">
                                    <TextBlock Text="{Binding ProjxonEmail}" Foreground="#6B7280" />
                                </Border>
                                <TextBox Text="{Binding EditProjxonEmail}" IsVisible="{Binding IsEditing}" />
                            </StackPanel>
                        </Grid>
                        
                        <Grid ColumnDefinitions="*,32,*">
                            <StackPanel Grid.Column="0" Spacing="8">
                                <TextBlock Text="Employee ID" FontSize="14" FontWeight="Medium" Foreground="#1F2937" />
                                <Border Background="#F9FAFB" CornerRadius="8" Padding="16,12" IsVisible="{Binding !IsEditing}">
                                    <TextBlock Text="{Binding EmployeeId}" Foreground="#6B7280" />
                                </Border>
                                <TextBox Text="{Binding EditEmployeeId}" IsVisible="{Binding IsEditing}" IsEnabled="False" />
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" Spacing="8">
                                <TextBlock Text="Start Date" FontSize="14" FontWeight="Medium" Foreground="#1F2937" />
                                <Border Background="#F9FAFB" CornerRadius="8" Padding="16,12" IsVisible="{Binding !IsEditing}">
                                    <TextBlock Text="{Binding StartDate}" Foreground="#6B7280" />
                                </Border>
                                <DatePicker SelectedDate="{Binding EditStartDate}"
                                            IsVisible="{Binding IsEditing}"
                                            HorizontalAlignment="Stretch"
                                            CornerRadius="8" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Attachments Tab -->
                <Border Background="White" CornerRadius="12" Padding="32" BorderBrush="#E5E7EB" BorderThickness="1" IsVisible="{Binding IsAttachmentsTabSelected}">
                    <StackPanel Spacing="24">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="Documents" FontSize="18" FontWeight="SemiBold" Foreground="#1F2937" VerticalAlignment="Center" />
                            
                            <!-- Resume Upload Button -->
                            <Button Grid.Column="1"
                                    Command="{Binding UploadResumeCommand}"
                                    Background="#1F2937" Foreground="White"
                                    CornerRadius="8" Padding="16,10"
                                    Cursor="Hand" IsEnabled="{Binding !IsUploadingDocument}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="{Binding IsUploadingDocument, Converter={StaticResource BoolToStringConverter}, ConverterParameter='Uploading...|Upload Resume'}" 
                                               VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>
                        </Grid>
                        
                        <!-- Document List -->
                        <ItemsControl ItemsSource="{Binding Documents}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type vm:DocumentItem}">
                                    <Border Background="White" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                                        <Grid ColumnDefinitions="Auto,*,Auto">
                                            <!-- Icon -->
                                            <Border Grid.Column="0" Background="#F3F4F6" CornerRadius="8" Width="40" Height="40" Margin="0,0,16,0">
                                                <Viewbox Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <Canvas Width="24" Height="24">
                                                        <Path Stroke="#6B7280" StrokeThickness="2" Data="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
                                                    </Canvas>
                                                </Viewbox>
                                            </Border>
                                            
                                            <!-- Info -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                                                <TextBlock Text="{Binding FileName}" FontSize="14" FontWeight="Medium" Foreground="#1F2937" />
                                                <TextBlock Text="{Binding UploadedDate}" FontSize="13" Foreground="#6B7280" />
                                            </StackPanel>
                                            
                                            <!-- View -->
                                            <Button Grid.Column="2" 
                                                    Command="{Binding #Root.((vm:ProfileViewModel)DataContext).ViewDocumentCommand}" 
                                                    CommandParameter="{Binding}" 
                                                    Background="White" Foreground="#374151" BorderBrush="#D1D5DB" BorderThickness="1" CornerRadius="6" Padding="16,8" Cursor="Hand">
                                                <TextBlock Text="View" FontSize="14" />
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>