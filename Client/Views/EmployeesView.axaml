<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Client.ViewModels"
             xmlns:converters="using:Client.Utils.Converters"
             xmlns:components="using:Client.Views.Components"
             xmlns:responses="clr-namespace:Shared.EmployeeManagement.Responses;assembly=Shared"
             mc:Ignorable="d" d:DesignWidth="1440" d:DesignHeight="900"
             x:Class="Client.Views.EmployeesView"
             x:DataType="vm:EmployeesViewModel"
             x:Name="Root">
    
    <UserControl.Resources>
        <converters:AlphabetFilterBackgroundConverter x:Key="AlphabetFilterBackgroundConverter" />
        <converters:AlphabetFilterForegroundConverter x:Key="AlphabetFilterForegroundConverter" />
        <converters:AlphabetFilterBorderConverter x:Key="AlphabetFilterBorderConverter" />
        <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
        <converters:BoolToBackgroundColorConverter x:Key="BoolToBackgroundColorConverter" />
        <converters:BoolToStringConverter x:Key="BoolToStringConverter" />
    </UserControl.Resources>
    
    <Design.DataContext>
        <vm:EmployeesViewModel />
    </Design.DataContext>

    <Panel>
        <!-- Main Content Grid -->
        <Grid Background="#F8F9FA">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <components:SidebarView Grid.Column="0" DataContext="{Binding Sidebar}" />

            <!-- Main Content Area -->
            <ScrollViewer Grid.Column="1"
                          HorizontalScrollBarVisibility="Disabled"
                          VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="40,32,40,32" Spacing="24">
                    
                    <!-- Header with Invite Button -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Spacing="8">
                            <TextBlock Text="Employees"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="#1F2937" />
                            <TextBlock Text="Browse and manage employee information"
                                       FontSize="16"
                                       Foreground="#6B7280" />
                        </StackPanel>
                        
                        <!-- Invite User Button -->
                        <Button Grid.Column="1"
                                Command="{Binding OpenInviteDialogCommand}"
                                Background="#1F2937"
                                Foreground="White"
                                CornerRadius="8"
                                Padding="20,12"
                                VerticalAlignment="Top">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="+" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" />
                                <TextBlock Text="Invite User" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                    </Grid>
                    
                    <!-- Search Bar -->
                    <Border Background="White"
                            CornerRadius="24"
                            Padding="16,12"
                            BorderBrush="#E5E7EB"
                            BorderThickness="1">
                        <Grid ColumnDefinitions="Auto,*">
                            <!-- Search Icon -->
                            <Viewbox Grid.Column="0" Width="20" Height="20" Margin="0,0,12,0">
                                <Canvas Width="24" Height="24">
                                    <Ellipse Stroke="#9CA3AF"
                                             StrokeThickness="2"
                                             Width="11"
                                             Height="11"
                                             Canvas.Left="2"
                                             Canvas.Top="2" />
                                    <Path Stroke="#9CA3AF"
                                          StrokeThickness="2"
                                          Data="M21 21l-4.35-4.35" />
                                </Canvas>
                            </Viewbox>
                            <TextBox Grid.Column="1"
                                     Text="{Binding SearchQuery}"
                                     Watermark="Search employees by name, email, or department..."
                                     Background="Transparent"
                                     BorderThickness="0"
                                     FontSize="14"
                                     Foreground="#374151" />
                        </Grid>
                    </Border>

                    <!-- Alphabetical Filter -->
                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <ItemsControl ItemsSource="{Binding AlphabetFilters}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type vm:AlphabetFilterItem}">
                                    <Button Command="{Binding #Root.((vm:EmployeesViewModel)DataContext).SelectFilterCommand}"
                                            CommandParameter="{Binding Letter}"
                                            Width="44"
                                            Height="44"
                                            Margin="0,0,8,8"
                                            CornerRadius="8"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Background="{Binding IsSelected, Converter={StaticResource AlphabetFilterBackgroundConverter}}"
                                            Foreground="{Binding IsSelected, Converter={StaticResource AlphabetFilterForegroundConverter}}"
                                            BorderBrush="{Binding IsSelected, Converter={StaticResource AlphabetFilterBorderConverter}}"
                                            BorderThickness="1">
                                        <Button.Styles>
                                            <Style Selector="Button:pointerover /template/ ContentPresenter">
                                                <Setter Property="Background" Value="#F3F4F6" />
                                            </Style>
                                        </Button.Styles>
                                        <TextBlock Text="{Binding Letter}" 
                                                   FontSize="14" 
                                                   FontWeight="Medium" />
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </WrapPanel>

                    <!-- Employee Cards Grid -->
                    <ItemsControl ItemsSource="{Binding FilteredEmployees}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type vm:EmployeeCardViewModel}">
                                <Button Command="{Binding #Root.((vm:EmployeesViewModel)DataContext).OpenEmployeeDetailCommand}"
                                        CommandParameter="{Binding Id}"
                                        Margin="0,0,16,16"
                                        Padding="0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Cursor="Hand">
                                    <Border Background="White"
                                            CornerRadius="12"
                                            Padding="24"
                                            Width="360"
                                            BorderBrush="#E5E7EB"
                                            BorderThickness="1">
                                        <Border.Styles>
                                            <Style Selector="Border:pointerover">
                                                <Setter Property="BoxShadow" Value="0 4 12 0 #20000000" />
                                            </Style>
                                        </Border.Styles>
                                        <StackPanel Spacing="16">
                                            <!-- Header with Avatar and Name -->
                                            <StackPanel Orientation="Horizontal" Spacing="16">
                                                <!-- Avatar Circle with Initial -->
                                                <Border Background="#F3F4F6"
                                                        CornerRadius="28"
                                                        Width="56"
                                                        Height="56">
                                                    <TextBlock Text="{Binding Initial}"
                                                               FontSize="20"
                                                               FontWeight="SemiBold"
                                                               Foreground="#6B7280"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center" />
                                                </Border>
                                                <StackPanel VerticalAlignment="Center" Spacing="2">
                                                    <TextBlock Text="{Binding FullName}"
                                                               FontSize="16"
                                                               FontWeight="SemiBold"
                                                               Foreground="#1F2937" />
                                                    <TextBlock Text="{Binding JobTitle}"
                                                               FontSize="14"
                                                               Foreground="#6B7280" />
                                                </StackPanel>
                                            </StackPanel>
                                            
                                            <!-- Discord and Email -->
                                            <StackPanel Spacing="8">
                                                <!-- Discord -->
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <TextBlock Text="#"
                                                               FontSize="14"
                                                               FontWeight="Medium"
                                                               Foreground="#9CA3AF" />
                                                    <TextBlock Text="{Binding DiscordUsername}"
                                                               FontSize="14"
                                                               Foreground="#6B7280" />
                                                </StackPanel>
                                                <!-- Email -->
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <Viewbox Width="16" Height="16">
                                                        <Canvas Width="24" Height="24">
                                                            <Rectangle Stroke="#9CA3AF"
                                                                       StrokeThickness="2"
                                                                       RadiusX="2"
                                                                       RadiusY="2"
                                                                       Width="20"
                                                                       Height="16"
                                                                       Canvas.Left="2"
                                                                       Canvas.Top="4" />
                                                            <Path Stroke="#9CA3AF"
                                                                  StrokeThickness="2"
                                                                  Data="M22 6l-10 7L2 6" />
                                                        </Canvas>
                                                    </Viewbox>
                                                    <TextBlock Text="{Binding Email}"
                                                               FontSize="14"
                                                               Foreground="#6B7280" />
                                                </StackPanel>
                                            </StackPanel>
                                            
                                            <!-- Department Tag -->
                                            <Border Background="#F3F4F6"
                                                    CornerRadius="4"
                                                    Padding="12,6"
                                                    HorizontalAlignment="Left">
                                                <TextBlock Text="{Binding Department}"
                                                           FontSize="13"
                                                           Foreground="#374151" />
                                            </Border>
                                        </StackPanel>
                                    </Border>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Empty State -->
                    <Border IsVisible="{Binding HasNoResults}"
                            Background="White"
                            CornerRadius="12"
                            Padding="48"
                            HorizontalAlignment="Center">
                        <StackPanel HorizontalAlignment="Center" Spacing="12">
                            <Viewbox Width="48" Height="48" HorizontalAlignment="Center">
                                <Canvas Width="24" Height="24">
                                    <Ellipse Stroke="#9CA3AF"
                                             StrokeThickness="2"
                                             Width="10"
                                             Height="10"
                                             Canvas.Left="6"
                                             Canvas.Top="2" />
                                    <Path Stroke="#9CA3AF"
                                          StrokeThickness="2"
                                          Data="M4 21v-2a4 4 0 0 1 4-4h4.5" />
                                    <Path Stroke="#9CA3AF"
                                          StrokeThickness="2"
                                          Data="M16 3.128a4 4 0 0 1 0 7.744" />
                                    <Path Stroke="#9CA3AF"
                                          StrokeThickness="2"
                                          Data="M22 21v-2a4 4 0 0 0-3-3.87" />
                                </Canvas>
                            </Viewbox>
                            <TextBlock Text="No employees found"
                                       FontSize="16"
                                       FontWeight="Medium"
                                       Foreground="#6B7280"
                                       HorizontalAlignment="Center" />
                            <TextBlock Text="Try adjusting your search or filter criteria"
                                       FontSize="14"
                                       Foreground="#9CA3AF"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </Border>
                    
                    <!-- Error Message Display -->
                    <Border IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                            Background="#FEE2E2"
                            BorderBrush="#EF4444"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <!-- Error Icon -->
                            <Viewbox Width="20" Height="20" VerticalAlignment="Top">
                                <Canvas Width="24" Height="24">
                                    <Path Fill="#EF4444" Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z" />
                                </Canvas>
                            </Viewbox>
                            <TextBlock Text="{Binding ErrorMessage}"
                                       Foreground="#B91C1C"
                                       TextWrapping="Wrap"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Loading Indicator -->
                    <Border IsVisible="{Binding IsLoading}"
                            Background="White"
                            CornerRadius="12"
                            Padding="48"
                            HorizontalAlignment="Center">
                        <StackPanel HorizontalAlignment="Center" Spacing="12">
                            <TextBlock Text="Loading employees..."
                                       FontSize="16"
                                       Foreground="#6B7280"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        
        <!-- Invite User Dialog Overlay -->
        <Grid IsVisible="{Binding IsInviteDialogOpen, FallbackValue=False}"
              Background="#80000000"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
            
            <Border Background="White"
                    CornerRadius="12"
                    Padding="32"
                    Width="480"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BoxShadow="0 8 32 0 #40000000">
                
                <StackPanel Spacing="24">
                    <!-- Dialog Header -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock Text="Invite New User"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       Foreground="#1F2937" />
                            <TextBlock Text="Send an invitation email to a new employee"
                                       FontSize="14"
                                       Foreground="#6B7280" />
                        </StackPanel>
                        
                        <!-- Top Right Close X Button -->
                        <Button Grid.Column="1"
                                Command="{Binding CloseInviteDialogCommand}"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="8"
                                VerticalAlignment="Top"
                                Cursor="Hand">
                            <TextBlock Text="âœ•" FontSize="18" Foreground="#9CA3AF" />
                        </Button>
                    </Grid>

                    <!-- Input Fields -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Email Address"
                                   FontSize="14"
                                   FontWeight="Medium"
                                   Foreground="#1F2937" />
                        <TextBox Text="{Binding InviteEmail}"
                                 Watermark="colleague@projxon.com"
                                 Padding="16,12"
                                 CornerRadius="8"
                                 FontSize="14"
                                 IsEnabled="{Binding !IsInviteSending}" />
                    </StackPanel>

                    <!-- Status/Result Message (Only shows if there is a result) -->
                    <Border IsVisible="{Binding HasInviteResult, FallbackValue=False}"
                            Background="{Binding InviteResultIsSuccess, Converter={StaticResource BoolToBackgroundColorConverter}}"
                            CornerRadius="8"
                            Padding="12">
                        <TextBlock Text="{Binding InviteResultMessage}"
                                   Foreground="{Binding InviteResultIsSuccess, Converter={StaticResource BoolToColorConverter}}"
                                   TextWrapping="Wrap"
                                   FontSize="13" />
                    </Border>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Right">
                        <Button Command="{Binding CloseInviteDialogCommand}"
                                Content="Cancel"
                                Background="White"
                                Foreground="#374151"
                                BorderBrush="#D1D5DB"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16,10" 
                                Cursor="Hand"/>
                        
                        <Button Command="{Binding SendInviteCommand}"
                                Background="#1F2937"
                                Foreground="White"
                                CornerRadius="8"
                                Padding="20,10"
                                IsEnabled="{Binding !IsInviteSending}"
                                Cursor="Hand">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <!-- Simple loading spinner logic (Text change) -->
                                <TextBlock Text="{Binding IsInviteSending, Converter={StaticResource BoolToStringConverter}, ConverterParameter='Sending...|Send Invitation'}" 
                                           FontWeight="Medium"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Panel>
</UserControl>
