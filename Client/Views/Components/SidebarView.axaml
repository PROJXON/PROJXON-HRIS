<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Client.ViewModels"
             xmlns:converters="using:Client.Utils.Converters"
             xmlns:asyncImageLoader="using:AsyncImageLoader"
             mc:Ignorable="d" d:DesignWidth="280" d:DesignHeight="900"
             x:Class="Client.Views.Components.SidebarView"
             x:DataType="vm:SidebarViewModel">

    <Design.DataContext>
        <vm:SidebarViewModel />
    </Design.DataContext>

    <UserControl.Resources>
        <converters:SidebarBackgroundConverter x:Key="SidebarBackgroundConverter" />
        <converters:SidebarForegroundConverter x:Key="SidebarForegroundConverter" />
        <converters:SidebarIconStrokeConverter x:Key="SidebarIconStrokeConverter" />
        <converters:BoolToStringConverter x:Key="BoolToStringConverter" />
    </UserControl.Resources>

    <Border Background="White"
            BorderBrush="#E5E7EB"
            BorderThickness="0,0,1,0">
        <Grid RowDefinitions="Auto,*">

            <!-- Profile Section -->
            <StackPanel Grid.Row="0"
                        Margin="24,32,24,24"
                        HorizontalAlignment="Center">

                <!-- Profile Avatar -->
                <Grid Width="96" Height="96" HorizontalAlignment="Center">
                    <Border CornerRadius="48"
                            ClipToBounds="True"
                            Background="#F3F4F6"
                            Width="96"
                            Height="96">
                        <Panel>
                            <!-- Default Icon -->
                            <Viewbox Width="48" Height="48" IsVisible="{Binding !ProfilePictureUrl.Length}">
                                <Canvas Width="24" Height="24">
                                    <Ellipse Stroke="#9CA3AF" StrokeThickness="2" Width="10" Height="10" Canvas.Left="7" Canvas.Top="2" />
                                    <Path Stroke="#9CA3AF" StrokeThickness="2" Data="M5 21v-2a4 4 0 0 1 4-4h6a4 4 0 0 1 4 4v2" />
                                </Canvas>
                            </Viewbox>

                            <!-- Actual Image -->
                            <Image asyncImageLoader:ImageLoader.Source="{Binding ProfilePictureUrl}"
                                   IsVisible="{Binding ProfilePictureUrl, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                   Stretch="UniformToFill"/>
                        </Panel>
                    </Border>

                    <!-- Edit Badge -->
                    <Button Command="{Binding UploadProfilePictureCommand}"
                            Background="Transparent"
                            Padding="0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Margin="0,0,4,4"
                            Cursor="Hand">
                        <Border Background="#1F2937" CornerRadius="12" Width="24" Height="24">
                            <Viewbox Width="12" Height="12" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Canvas Width="24" Height="24">
                                    <Path Stroke="White" StrokeThickness="2" Data="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7" />
                                    <Path Stroke="White" StrokeThickness="2" Data="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z" />
                                </Canvas>
                            </Viewbox>
                        </Border>
                    </Button>
                </Grid>

                <!-- User Name -->
                <TextBlock Text="{Binding UserName}"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#1F2937"
                           HorizontalAlignment="Center"
                           Margin="0,16,0,4" />
                
                <!-- Role (Italicized) -->
                <TextBlock Text="{Binding UserRole}"
                           FontSize="14"
                           FontStyle="Italic"
                           Foreground="#6B7280"
                           HorizontalAlignment="Center" />
            </StackPanel>

            <!-- Navigation Menu -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="16,0,16,24" Spacing="4">
                    
                    <StackPanel.Styles>
                        <Style Selector="Button">
                            <Setter Property="CornerRadius" Value="8" />
                            <Setter Property="Padding" Value="16,12" />
                            <Setter Property="HorizontalAlignment" Value="Stretch" />
                            <Setter Property="HorizontalContentAlignment" Value="Left" />
                            <Setter Property="Cursor" Value="Hand" />
                        </Style>
                        
                        <Style Selector="Button:pointerover /template/ ContentPresenter">
                            <Setter Property="Background" Value="#F3F4F6" />
                        </Style>

                        <!-- Force Text and Icons to Dark Gray on Hover -->
                        <Style Selector="Button:pointerover TextBlock">
                            <Setter Property="Foreground" Value="#1F2937" />
                        </Style>
                        <Style Selector="Button:pointerover Path">
                            <Setter Property="Stroke" Value="#1F2937" />
                        </Style>
                        <Style Selector="Button:pointerover Ellipse">
                            <Setter Property="Stroke" Value="#1F2937" />
                        </Style>
                        <Style Selector="Button:pointerover Rectangle">
                            <Setter Property="Stroke" Value="#1F2937" />
                        </Style>
                    </StackPanel.Styles>

                    <!-- Dashboard -->
                    <Button Command="{Binding NavigateToDashboardCommand}"
                            Background="{Binding CurrentPage, Converter={StaticResource SidebarBackgroundConverter}, ConverterParameter='Dashboard'}"
                            Foreground="{Binding CurrentPage, Converter={StaticResource SidebarForegroundConverter}, ConverterParameter='Dashboard'}">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Viewbox Width="20" Height="20">
                                <Canvas Width="24" Height="24">
                                    <Path Stroke="{Binding CurrentPage, Converter={StaticResource SidebarIconStrokeConverter}, ConverterParameter='Dashboard'}"
                                          StrokeThickness="2" Data="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" />
                                    <Path Stroke="{Binding CurrentPage, Converter={StaticResource SidebarIconStrokeConverter}, ConverterParameter='Dashboard'}"
                                          StrokeThickness="2" Data="M9 22V12h6v10" />
                                </Canvas>
                            </Viewbox>
                            <TextBlock Text="Dashboard" VerticalAlignment="Center" FontSize="15" />
                        </StackPanel>
                    </Button>

                    <!-- Profile -->
                    <Button Command="{Binding NavigateToProfileCommand}"
                            Background="{Binding CurrentPage, Converter={StaticResource SidebarBackgroundConverter}, ConverterParameter='Profile'}"
                            Foreground="{Binding CurrentPage, Converter={StaticResource SidebarForegroundConverter}, ConverterParameter='Profile'}">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Viewbox Width="20" Height="20">
                                <Canvas Width="24" Height="24">
                                    <Ellipse Stroke="{Binding CurrentPage, Converter={StaticResource SidebarIconStrokeConverter}, ConverterParameter='Profile'}"
                                             StrokeThickness="2" Width="10" Height="10" Canvas.Left="7" Canvas.Top="2" />
                                    <Path Stroke="{Binding CurrentPage, Converter={StaticResource SidebarIconStrokeConverter}, ConverterParameter='Profile'}"
                                          StrokeThickness="2" Data="M5 21v-2a4 4 0 0 1 4-4h6a4 4 0 0 1 4 4v2" />
                                </Canvas>
                            </Viewbox>
                            <TextBlock Text="Profile" VerticalAlignment="Center" FontSize="15" />
                        </StackPanel>
                    </Button>

                    <!-- Time Off Requests -->
                    <Button Command="{Binding NavigateToTimeOffCommand}"
                            Background="{Binding CurrentPage, Converter={StaticResource SidebarBackgroundConverter}, ConverterParameter='TimeOff'}"
                            Foreground="{Binding CurrentPage, Converter={StaticResource SidebarForegroundConverter}, ConverterParameter='TimeOff'}">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Viewbox Width="20" Height="20">
                                <Canvas Width="24" Height="24">
                                    <Rectangle Stroke="{Binding CurrentPage, Converter={StaticResource SidebarIconStrokeConverter}, ConverterParameter='TimeOff'}"
                                               StrokeThickness="2" RadiusX="2" RadiusY="2" Width="18" Height="18" Canvas.Left="3" Canvas.Top="4" />
                                    <Path Stroke="{Binding CurrentPage, Converter={StaticResource SidebarIconStrokeConverter}, ConverterParameter='TimeOff'}"
                                          StrokeThickness="2" Data="M16 2v4" />
                                    <Path Stroke="{Binding CurrentPage, Converter={StaticResource SidebarIconStrokeConverter}, ConverterParameter='TimeOff'}"
                                          StrokeThickness="2" Data="M8 2v4" />
                                    <Path Stroke="{Binding CurrentPage, Converter={StaticResource SidebarIconStrokeConverter}, ConverterParameter='TimeOff'}"
                                          StrokeThickness="2" Data="M3 10h18" />
                                </Canvas>
                            </Viewbox>
                            <TextBlock Text="Time Off Requests" VerticalAlignment="Center" FontSize="15" />
                        </StackPanel>
                    </Button>

                    <!-- Attendance -->
                    <Button Command="{Binding NavigateToAttendanceCommand}"
                            Background="{Binding CurrentPage, Converter={StaticResource SidebarBackgroundConverter}, ConverterParameter='Attendance'}"
                            Foreground="{Binding CurrentPage, Converter={StaticResource SidebarForegroundConverter}, ConverterParameter='Attendance'}">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Viewbox Width="20" Height="20">
                                <Canvas Width="24" Height="24">
                                    <Rectangle Stroke="{Binding CurrentPage, Converter={StaticResource SidebarIconStrokeConverter}, ConverterParameter='Attendance'}"
                                               StrokeThickness="2" RadiusX="2" RadiusY="2" Width="18" Height="18" Canvas.Left="3" Canvas.Top="4" />
                                    <Path Stroke="{Binding CurrentPage, Converter={StaticResource SidebarIconStrokeConverter}, ConverterParameter='Attendance'}"
                                          StrokeThickness="2" Data="M16 2v4" />
                                    <Path Stroke="{Binding CurrentPage, Converter={StaticResource SidebarIconStrokeConverter}, ConverterParameter='Attendance'}"
                                          StrokeThickness="2" Data="M8 2v4" />
                                    <Path Stroke="{Binding CurrentPage, Converter={StaticResource SidebarIconStrokeConverter}, ConverterParameter='Attendance'}"
                                          StrokeThickness="2" Data="M3 10h18" />
                                </Canvas>
                            </Viewbox>
                            <TextBlock Text="Attendance" VerticalAlignment="Center" FontSize="15" />
                        </StackPanel>
                    </Button>

                    <!-- Employees -->
                    <Button Command="{Binding NavigateToEmployeesCommand}"
                            Background="{Binding CurrentPage, Converter={StaticResource SidebarBackgroundConverter}, ConverterParameter='Employees'}"
                            Foreground="{Binding CurrentPage, Converter={StaticResource SidebarForegroundConverter}, ConverterParameter='Employees'}">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Viewbox Width="20" Height="20">
                                <Canvas Width="24" Height="24">
                                    <Ellipse Stroke="{Binding CurrentPage, Converter={StaticResource SidebarIconStrokeConverter}, ConverterParameter='Employees'}"
                                             StrokeThickness="2" Width="10" Height="10" Canvas.Left="6" Canvas.Top="2" />
                                    <Path Stroke="{Binding CurrentPage, Converter={StaticResource SidebarIconStrokeConverter}, ConverterParameter='Employees'}"
                                          StrokeThickness="2" Data="M4 21v-2a4 4 0 0 1 4-4h4.5" />
                                    <Path Stroke="{Binding CurrentPage, Converter={StaticResource SidebarIconStrokeConverter}, ConverterParameter='Employees'}"
                                          StrokeThickness="2" Data="M16 3.128a4 4 0 0 1 0 7.744" />
                                    <Path Stroke="{Binding CurrentPage, Converter={StaticResource SidebarIconStrokeConverter}, ConverterParameter='Employees'}"
                                          StrokeThickness="2" Data="M22 21v-2a4 4 0 0 0-3-3.87" />
                                </Canvas>
                            </Viewbox>
                            <TextBlock Text="Employees" VerticalAlignment="Center" FontSize="15" />
                        </StackPanel>
                    </Button>

                    <!-- Recruitment -->
                    <Button Command="{Binding NavigateToRecruitmentCommand}"
                            Background="{Binding CurrentPage, Converter={StaticResource SidebarBackgroundConverter}, ConverterParameter='Recruitment'}"
                            Foreground="{Binding CurrentPage, Converter={StaticResource SidebarForegroundConverter}, ConverterParameter='Recruitment'}">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Viewbox Width="20" Height="20">
                                <Canvas Width="24" Height="24">
                                    <Rectangle Stroke="{Binding CurrentPage, Converter={StaticResource SidebarIconStrokeConverter}, ConverterParameter='Recruitment'}"
                                               StrokeThickness="2" RadiusX="2" RadiusY="2" Width="14" Height="18" Canvas.Left="5" Canvas.Top="3" />
                                    <Path Stroke="{Binding CurrentPage, Converter={StaticResource SidebarIconStrokeConverter}, ConverterParameter='Recruitment'}"
                                          StrokeThickness="2" Data="M9 7h6" />
                                    <Path Stroke="{Binding CurrentPage, Converter={StaticResource SidebarIconStrokeConverter}, ConverterParameter='Recruitment'}"
                                          StrokeThickness="2" Data="M9 11h6" />
                                    <Path Stroke="{Binding CurrentPage, Converter={StaticResource SidebarIconStrokeConverter}, ConverterParameter='Recruitment'}"
                                          StrokeThickness="2" Data="M9 15h4" />
                                </Canvas>
                            </Viewbox>
                            <TextBlock Text="Recruitment" VerticalAlignment="Center" FontSize="15" />
                        </StackPanel>
                    </Button>

                    <!-- Forms -->
                    <Button Command="{Binding NavigateToFormsCommand}"
                            Background="{Binding CurrentPage, Converter={StaticResource SidebarBackgroundConverter}, ConverterParameter='Forms'}"
                            Foreground="{Binding CurrentPage, Converter={StaticResource SidebarForegroundConverter}, ConverterParameter='Forms'}">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Viewbox Width="20" Height="20">
                                <Canvas Width="24" Height="24">
                                    <Rectangle Stroke="{Binding CurrentPage, Converter={StaticResource SidebarIconStrokeConverter}, ConverterParameter='Forms'}"
                                               StrokeThickness="2" RadiusX="2" RadiusY="2" Width="14" Height="18" Canvas.Left="5" Canvas.Top="3" />
                                    <Path Stroke="{Binding CurrentPage, Converter={StaticResource SidebarIconStrokeConverter}, ConverterParameter='Forms'}"
                                          StrokeThickness="2" Data="M9 7h6" />
                                    <Path Stroke="{Binding CurrentPage, Converter={StaticResource SidebarIconStrokeConverter}, ConverterParameter='Forms'}"
                                          StrokeThickness="2" Data="M9 11h6" />
                                    <Path Stroke="{Binding CurrentPage, Converter={StaticResource SidebarIconStrokeConverter}, ConverterParameter='Forms'}"
                                          StrokeThickness="2" Data="M9 15h4" />
                                </Canvas>
                            </Viewbox>
                            <TextBlock Text="Forms" VerticalAlignment="Center" FontSize="15" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>