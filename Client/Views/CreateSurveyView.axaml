<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Client.ViewModels"
             xmlns:components="using:Client.Views.Components"
             mc:Ignorable="d" d:DesignWidth="1440" d:DesignHeight="900"
             x:Class="Client.Views.CreateSurveyView"
             x:DataType="vm:CreateSurveyViewModel"
             x:Name="Root">
    
    <Design.DataContext>
        <vm:CreateSurveyViewModel />
    </Design.DataContext>

    <Grid Background="#F8F9FA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="320" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <components:SidebarView Grid.Column="0" DataContext="{Binding Sidebar}" />

        <!-- Main Content Area -->
        <ScrollViewer Grid.Column="1"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,32,40,32" Spacing="24">
                
                <!-- Back Button -->
                <Button Command="{Binding GoBackCommand}"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="0"
                        Cursor="Hand"
                        HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Viewbox Width="20" Height="20">
                            <Canvas Width="24" Height="24">
                                <Path Stroke="#374151"
                                      StrokeThickness="2"
                                      Data="M19 12H5" />
                                <Path Stroke="#374151"
                                      StrokeThickness="2"
                                      Data="M12 19l-7-7 7-7" />
                            </Canvas>
                        </Viewbox>
                        <TextBlock Text="Back to Forms"
                                   FontSize="14"
                                   Foreground="#374151"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </Button>

                <!-- Header -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Create New Survey"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#1F2937" />
                    <TextBlock Text="Build a survey to send to your employees"
                               FontSize="16"
                               Foreground="#6B7280" />
                </StackPanel>

                <!-- Survey Details Card -->
                <Border Background="White"
                        CornerRadius="12"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        Padding="24">
                    <StackPanel Spacing="20">
                        <TextBlock Text="Survey Details"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#1F2937" />
                        
                        <!-- Survey Title -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Survey Title"
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Foreground="#1F2937" />
                            <TextBox Text="{Binding SurveyTitle}"
                                     Watermark="e.g., Employee Satisfaction Survey"
                                     Padding="16,12"
                                     CornerRadius="8"
                                     FontSize="14" />
                        </StackPanel>
                        
                        <!-- Description -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Description"
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Foreground="#1F2937" />
                            <TextBox Text="{Binding SurveyDescription}"
                                     Watermark="Brief description of the survey purpose"
                                     Padding="16,12"
                                     CornerRadius="8"
                                     FontSize="14"
                                     MinHeight="80"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Questions Card -->
                <Border Background="White"
                        CornerRadius="12"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        Padding="24">
                    <StackPanel Spacing="20">
                        <TextBlock Text="Questions"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#1F2937" />
                        
                        <!-- Existing Questions List -->
                        <ItemsControl ItemsSource="{Binding Questions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type vm:SurveyQuestionViewModel}">
                                    <Border Background="#F9FAFB"
                                            CornerRadius="8"
                                            Padding="16"
                                            Margin="0,0,0,12">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <StackPanel Grid.Column="0" Spacing="4">
                                                <TextBlock Text="{Binding QuestionLabel}"
                                                           FontSize="12"
                                                           Foreground="#6B7280" />
                                                <TextBlock Text="{Binding QuestionText}"
                                                           FontSize="14"
                                                           Foreground="#1F2937"
                                                           TextWrapping="Wrap" />
                                            </StackPanel>
                                            
                                            <!-- Delete Button -->
                                            <Button Grid.Column="1"
                                                    Command="{Binding #Root.((vm:CreateSurveyViewModel)DataContext).DeleteQuestionCommand}"
                                                    CommandParameter="{Binding}"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Padding="8"
                                                    VerticalAlignment="Top"
                                                    Cursor="Hand">
                                                <Viewbox Width="16" Height="16">
                                                    <Canvas Width="24" Height="24">
                                                        <!-- Trash icon -->
                                                        <Path Stroke="#9CA3AF"
                                                              StrokeThickness="2"
                                                              Data="M3 6h18" />
                                                        <Path Stroke="#9CA3AF"
                                                              StrokeThickness="2"
                                                              Data="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" />
                                                    </Canvas>
                                                </Viewbox>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        
                        <!-- Add New Question -->
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBox Grid.Column="0"
                                     Text="{Binding NewQuestionText}"
                                     Watermark="Type your question here..."
                                     Padding="16,12"
                                     CornerRadius="8"
                                     FontSize="14"
                                     Margin="0,0,12,0" />
                            <Button Grid.Column="1"
                                    Command="{Binding AddQuestionCommand}"
                                    Background="#1F2937"
                                    Foreground="White"
                                    CornerRadius="8"
                                    Padding="20,12">
                                <TextBlock Text="Add Question" FontSize="14" />
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Right Panel - Survey Summary -->
        <Border Grid.Column="2"
                Background="White"
                BorderBrush="#E5E7EB"
                BorderThickness="1,0,0,0">
            <StackPanel Margin="24,32,24,24" Spacing="24">
                <TextBlock Text="Survey Summary"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#1F2937" />

                <!-- Total Questions -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Total Questions"
                               FontSize="14"
                               Foreground="#6B7280" />
                    <TextBlock Text="{Binding TotalQuestions}"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="#1F2937" />
                </StackPanel>
                
                <!-- Separator -->
                <Border Height="1" Background="#E5E7EB" />

                <!-- Status -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Status"
                               FontSize="14"
                               Foreground="#6B7280" />
                    <Border Background="#F3F4F6"
                            CornerRadius="4"
                            Padding="12,6"
                            HorizontalAlignment="Left">
                        <TextBlock Text="{Binding Status}"
                                   FontSize="14"
                                   Foreground="#374151" />
                    </Border>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Spacing="12" Margin="0,16,0,0">
                    <!-- Save as Draft Button -->
                    <Button Command="{Binding SaveAsDraftCommand}"
                            Background="#4B5563"
                            Foreground="White"
                            CornerRadius="8"
                            Padding="0,14"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            IsEnabled="{Binding !IsLoading}">
                        <TextBlock Text="Save as Draft" FontSize="15" FontWeight="Medium" />
                    </Button>
                    
                    <!-- Cancel Button -->
                    <Button Command="{Binding CancelCommand}"
                            Background="White"
                            Foreground="#374151"
                            BorderBrush="#D1D5DB"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="0,14"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center">
                        <Button.Styles>
                            <Style Selector="Button:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="#F3F4F6" />
                            </Style>
                        </Button.Styles>
                        <TextBlock Text="Cancel" FontSize="15" />
                    </Button>
                </StackPanel>

                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}"
                           IsVisible="{Binding ErrorMessage.Length}"
                           FontSize="14"
                           Foreground="#DC2626"
                           TextWrapping="Wrap" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
