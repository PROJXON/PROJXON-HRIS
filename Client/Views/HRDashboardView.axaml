<UserControl xmlns="https://github.com/avaloniaui"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:vm="using:Client.ViewModels"
xmlns:components="using:Client.Views.Components"
mc:Ignorable="d" d:DesignWidth="1440" d:DesignHeight="900"
x:Class="Client.Views.HRDashboardView"
x:DataType="vm:HRDashboardViewModel">
    
<Design.DataContext>
    <vm:HRDashboardViewModel />
</Design.DataContext>

<Grid Background="#F8F9FA">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="280" />
        <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <!-- Sidebar -->
    <components:SidebarView Grid.Column="0" DataContext="{Binding Sidebar}" />

    <!-- Main Content Area -->
    <ScrollViewer Grid.Column="1"
                  HorizontalScrollBarVisibility="Disabled"
                  VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40,32,40,32" Spacing="32">
            
            <!-- Header -->
            <StackPanel Spacing="8">
                <TextBlock Text="HR Dashboard"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#1F2937" />
                <TextBlock Text="Welcome back! Here's what's happening today."
                           FontSize="16"
                           Foreground="#6B7280" />
            </StackPanel>

            <!-- Stats Cards -->
            <Grid ColumnDefinitions="*,*,*,*">
                <Grid.Styles>
                    <Style Selector="Border.stat-card">
                        <Setter Property="Background" Value="White" />
                        <Setter Property="CornerRadius" Value="12" />
                        <Setter Property="Padding" Value="24" />
                        <Setter Property="BorderBrush" Value="#E5E7EB" />
                        <Setter Property="BorderThickness" Value="1" />
                    </Style>
                </Grid.Styles>
                
                <!-- Total Employees -->
                <Border Grid.Column="0" Classes="stat-card" Margin="0,0,12,0">
                    <Grid ColumnDefinitions="*,Auto">
                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock Text="Total Employees"
                                       FontSize="14"
                                       Foreground="#6B7280" />
                            <TextBlock Text="{Binding TotalEmployees}"
                                       FontSize="32"
                                       FontWeight="Bold"
                                       Foreground="#1F2937" />
                        </StackPanel>
                        <Border Grid.Column="1"
                                Background="#3B82F6"
                                CornerRadius="10"
                                Width="48"
                                Height="48"
                                VerticalAlignment="Center">
                            <Viewbox Width="24" Height="24"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center">
                                <Canvas Width="24" Height="24">
                                    <Ellipse Stroke="White"
                                             StrokeThickness="2"
                                             Width="10"
                                             Height="10"
                                             Canvas.Left="6"
                                             Canvas.Top="2" />
                                    <Path Stroke="White"
                                          StrokeThickness="2"
                                          Data="M4 21v-2a4 4 0 0 1 4-4h4.5" />
                                    <Path Stroke="White"
                                          StrokeThickness="2"
                                          Data="M16 3.128a4 4 0 0 1 0 7.744" />
                                    <Path Stroke="White"
                                          StrokeThickness="2"
                                          Data="M22 21v-2a4 4 0 0 0-3-3.87" />
                                </Canvas>
                            </Viewbox>
                        </Border>
                    </Grid>
                </Border>

                <!-- Pending Time Off -->
                <Border Grid.Column="1" Classes="stat-card" Margin="6,0,6,0">
                    <Grid ColumnDefinitions="*,Auto">
                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock Text="Pending Time Off"
                                       FontSize="14"
                                       Foreground="#6B7280" />
                            <TextBlock Text="{Binding PendingTimeOff}"
                                       FontSize="32"
                                       FontWeight="Bold"
                                       Foreground="#1F2937" />
                        </StackPanel>
                        <Border Grid.Column="1"
                                Background="#F97316"
                                CornerRadius="10"
                                Width="48"
                                Height="48"
                                VerticalAlignment="Center">
                            <Viewbox Width="24" Height="24"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center">
                                <Canvas Width="24" Height="24">
                                    <Rectangle Stroke="White"
                                               StrokeThickness="2"
                                               RadiusX="2"
                                               RadiusY="2"
                                               Width="18"
                                               Height="18"
                                               Canvas.Left="3"
                                               Canvas.Top="4" />
                                    <Path Stroke="White"
                                          StrokeThickness="2"
                                          Data="M16 2v4" />
                                    <Path Stroke="White"
                                          StrokeThickness="2"
                                          Data="M8 2v4" />
                                    <Path Stroke="White"
                                          StrokeThickness="2"
                                          Data="M3 10h18" />
                                </Canvas>
                            </Viewbox>
                        </Border>
                    </Grid>
                </Border>

                <!-- Active Recruitments -->
                <Border Grid.Column="2" Classes="stat-card" Margin="6,0,6,0">
                    <Grid ColumnDefinitions="*,Auto">
                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock Text="Active Recruitments"
                                       FontSize="14"
                                       Foreground="#6B7280"
                                       TextWrapping="Wrap" />
                            <TextBlock Text="{Binding ActiveRecruitments}"
                                       FontSize="32"
                                       FontWeight="Bold"
                                       Foreground="#1F2937" />
                        </StackPanel>
                        <Border Grid.Column="1"
                                Background="#22C55E"
                                CornerRadius="10"
                                Width="48"
                                Height="48"
                                VerticalAlignment="Center">
                            <Viewbox Width="24" Height="24"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center">
                                <Canvas Width="24" Height="24">
                                    <Rectangle Stroke="White"
                                               StrokeThickness="2"
                                               RadiusX="2"
                                               RadiusY="2"
                                               Width="14"
                                               Height="18"
                                               Canvas.Left="5"
                                               Canvas.Top="3" />
                                    <Path Stroke="White"
                                          StrokeThickness="2"
                                          Data="M9 7h6" />
                                    <Path Stroke="White"
                                          StrokeThickness="2"
                                          Data="M9 11h6" />
                                    <Path Stroke="White"
                                          StrokeThickness="2"
                                          Data="M9 15h4" />
                                </Canvas>
                            </Viewbox>
                        </Border>
                    </Grid>
                </Border>

                <!-- This Month Attendance -->
                <Border Grid.Column="3" Classes="stat-card" Margin="12,0,0,0">
                    <Grid ColumnDefinitions="*,Auto">
                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock Text="This Month Attendance"
                                       FontSize="14"
                                       Foreground="#6B7280"
                                       TextWrapping="Wrap" />
                            <TextBlock Text="{Binding AttendancePercentage, StringFormat={}{0}%}"
                                       FontSize="32"
                                       FontWeight="Bold"
                                       Foreground="#1F2937" />
                        </StackPanel>
                        <Border Grid.Column="1"
                                Background="#A855F7"
                                CornerRadius="10"
                                Width="48"
                                Height="48"
                                VerticalAlignment="Center">
                            <Viewbox Width="24" Height="24"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center">
                                <Canvas Width="24" Height="24">
                                    <Rectangle Stroke="White"
                                               StrokeThickness="2"
                                               RadiusX="2"
                                               RadiusY="2"
                                               Width="18"
                                               Height="18"
                                               Canvas.Left="3"
                                               Canvas.Top="4" />
                                    <Path Stroke="White"
                                          StrokeThickness="2"
                                          Data="M16 2v4" />
                                    <Path Stroke="White"
                                          StrokeThickness="2"
                                          Data="M8 2v4" />
                                    <Path Stroke="White"
                                          StrokeThickness="2"
                                          Data="M3 10h18" />
                                    <Path Stroke="White"
                                          StrokeThickness="2"
                                          Data="M9 16l2 2 4-4" />
                                </Canvas>
                            </Viewbox>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- Recent Activity Section -->
            <Border Background="White"
                    CornerRadius="12"
                    Padding="24"
                    BorderBrush="#E5E7EB"
                    BorderThickness="1">
                <StackPanel Spacing="16">
                    <TextBlock Text="Recent Activity"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#1F2937" />
                    
                    <!-- Activity Items -->
                    <ItemsControl ItemsSource="{Binding RecentActivities}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="0,12"
                                        BorderBrush="#F3F4F6"
                                        BorderThickness="0,0,0,1">
                                    <Grid ColumnDefinitions="Auto,*,Auto">
                                        <!-- Activity Indicator -->
                                        <Ellipse Grid.Column="0"
                                                 Width="8"
                                                 Height="8"
                                                 Fill="#3B82F6"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,16,0" />
                                        
                                        <!-- Activity Content -->
                                        <StackPanel Grid.Column="1" Spacing="2">
                                            <TextBlock Text="{Binding Title}"
                                                       FontSize="14"
                                                       FontWeight="Medium"
                                                       Foreground="#1F2937" />
                                            <TextBlock Text="{Binding Subtitle}"
                                                       FontSize="13"
                                                       Foreground="#6B7280" />
                                        </StackPanel>
                                        
                                        <!-- Timestamp -->
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding TimeAgo}"
                                                   FontSize="13"
                                                   Foreground="#9CA3AF"
                                                   VerticalAlignment="Center" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Grid>
</UserControl>
